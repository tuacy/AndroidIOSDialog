<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <TextView
        android:id="@+id/txt_ios_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/ios_sheet_title_min_height"
        android:background="@drawable/action_sheet_top_normal"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/s_Layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none">

        <LinearLayout
            android:id="@+id/l_Layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/txt_ios_sheet_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_small"
        android:background="@drawable/action_sheet_single_selector"
        android:gravity="center"
        android:minHeight="@dimen/ios_sheet_title_min_height"
        android:text="@string/cancel"
        android:textColor="@color/action_sheet_blue"
        android:textSize="@dimen/text_size_title_small"
        android:textStyle="bold" />

</LinearLayout>